; Comments can begin with // # or ;   - We now support C style /* */ comments too
//
// most settings go in [general] setting, servers are called [server:name] where name is short name for it
//
[general]
;  audit | crit | warn | info | debug | crazy
log.level=debug
path.help-dir=./help
ui.show-pings=false
# Divide scroll events by this # to get single-steps
ui.freqentry.scroll-divider=3.0
# If we want to autoconnect to a server, name it here.
;server.auto-connect=localhost
codecs.allowed=pc16 mu16 mu08
default.volume.rx=50
default.tx.power=50
;debug.http=true
debug.http.crazy=false
debug.audio=*:3
audio.volume.rx=0
path.help-dir=./help

; Window placements & options (hidden|minimized|modal|no-hide|raised)
; Size of -1 will avoid resizing the window and let GTK size it
ui.serverpick=300,222@1214,677|raised|modal
ui.main=999,596@889,482|raised
ui.fm-mode=429,226@1487,199|raised|modal
ui.userlist=200,354@959,139|raised
ui.editcfg=640,925@1,151|raised|modal

# Length of time to block CAT updates (in seconds) after a local state change
cat.poll-blocking=1

[server:localhost]
server.enabled=true
server.url=ws://127.0.0.1:8420/ws/
server.user=admin
server.pass=password

[server:localhost-https]
server.enabled=true
server.url=ws://127.0.0.1:8420/ws/
server.tx-url=wss://localhost:4420/ws-tx/
server.user=admin
server.pass=password
