; Comments can begin with // # or ;   - We now support C style /* */ comments too
//
// most settings go in [general] setting, servers are called [server:name] where name is short name for it
//
[general]
;  audit | crit | warn | info | debug | crazy
log.level=debug
ui.show-pings=false
# If we want to autoconnect to a server, name it here.
;server.auto-connect=localhost
codecs.allowed=pc16 mu16 mu08
default.volume.rx=50
default.tx.power=50
;debug.http=true
audio.debug=*:3
audio.volume.rx=0

; Window placements & options (hidden|modal|raised|no-hide)
; Size of -1 will avoid resizing the window and let GTK size it
ui.userlist=-1,-1@100,100|hidden
ui.serverpick=-1,-1@526,174|modal|raised
ui.main=999,596@887,482|raised
ui.fm-mode=429,212@1473,234|raised|modal

# Length of time to block CAT updates (in seconds) after a local state change
cat.poll-blocking=1

[server:localhost]
server.enabled=true
server.url=ws://127.0.0.1:8420/ws/
server.user=admin
server.pass=password

[server:localhost-https]
server.enabled=true
server.url=ws://127.0.0.1:8420/ws/
server.tx-url=wss://localhost:4420/ws-tx/
server.user=admin
server.pass=password
